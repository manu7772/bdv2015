{% trans_default_domain 'FOSUserBundle' %}
<h4 class="well well-md">Modifiez votre compte<br><small>Note : les libell√©s en rouge sont obligatoires</small></h4>
{% if form_errors(form) != null %}
<div class="alert alert-danger">
	{{ form_errors(form) }}
</div>
{% endif %}
<form action="{{ path('fos_user_profile_edit') }}" {{ form_enctype(form) }} method="POST" class="fos_user_profile_edit">
	<div class="panel panel-default">
		<div class="panel-heading">Informations de connexion</div>
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.email) }}</div>
			<div class="col-xs-6">{{ form_widget(form.email) }}</div>
		</div>
			{{ form_errors(form.email) }}
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.username) }}</div>
			<div class="col-xs-6">{{ form_widget(form.username) }}</div>
		</div>
			{{ form_errors(form.username) }}
		<hr />
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.villeChoice) }}</div>
			<div class="col-xs-6">{{ form_widget(form.villeChoice) }}</div>
		</div>
	</div>

	<div class="panel panel-default">
		<div class="panel-heading">Votre adresse postale</div>
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.nom) }}</div>
			<div class="col-xs-6">{{ form_widget(form.nom) }}</div>
		</div>
			{{ form_errors(form.nom) }}
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.prenom) }}</div>
			<div class="col-xs-6">{{ form_widget(form.prenom) }}</div>
		</div>
			{{ form_errors(form.prenom) }}
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.tel) }}</div>
			<div class="col-xs-6">{{ form_widget(form.tel) }}</div>
		</div>
			{{ form_errors(form.tel) }}
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.adresse) }}</div>
			<div class="col-xs-6">{{ form_widget(form.adresse) }}</div>
		</div>
			{{ form_errors(form.adresse) }}
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.cp) }}</div>
			<div class="col-xs-6">{{ form_widget(form.cp) }}</div>
		</div>
			{{ form_errors(form.cp) }}
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.ville) }}</div>
			<div class="col-xs-6">{{ form_widget(form.ville) }}</div>
		</div>
			{{ form_errors(form.ville) }}
		<div class="panel-body row">
			<div class="col-xs-4">{{ form_label(form.commentaire) }}</div>
			<div class="col-xs-6">{{ form_widget(form.commentaire) }}</div>
		</div>
			{{ form_errors(form.commentaire) }}
	</div>

	<div class="panel panel-default">
		<div class="panel-body row">
			<input type="submit" value="Enregistrer les modifications" class="btn btn-warning" />
		</div>
	</div>

	{{ form_rest(form) }}
</form>